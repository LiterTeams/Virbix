{
    "compilerOptions": {
      "outDir": "dist",
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": false,
      "module": "ESNext",
      "moduleResolution": "Node",
      "target": "ESNext",
      "jsx": "react-jsx",
      "strict": true,
      "baseUrl": "./",
      "paths": {
        "@app/*": ["./src/*"],
        "@helpers/*": ["./src/helpers/*"],
        "@hooks/*": ["./src/hooks/*"],
        "@icons/*": ["./src/icons/*"],
        "@type/*": ["./src/types/*"],
        "@ui/*": ["./src/ui/*"],
      }
    },
    "include": ["src"]
  }
  